  "principles": {
    "visualHierarchy": {
      "description": "Use tamanhos de fonte, pesos e cores para criar hierarquia visual clara",
      "guidelines": [
        "Títulos principais devem ser 2-3x maiores que o texto do corpo",
        "Use darkGreen para elementos de ação e destaque",
        "Mantenha contraste adequado para acessibilidade (mínimo 4.5:1)"
      ]
    },
    "spacing": {
      "description": "Espaçamento consistente cria ritmo visual e organização",
      "guidelines": [
        "Use a escala de espaçamento de forma consistente",
        "Mantenha padding interno de cards entre 1rem - 1.5rem",
        "Espaçamento entre seções deve ser 2rem - 3rem",
        "Gap em grids deve ser 1.5rem - 2rem"
      ]
    },
    "interactivity": {
      "description": "Feedback visual claro em interações do usuário",
      "guidelines": [
        "Todos os elementos clicáveis devem ter estados hover",
        "Transições suaves (0.2s - 0.3s) para mudanças de estado",
        "Cards devem elevar-se ligeiramente no hover",
        "Botões devem ter feedback visual imediato"
      ]
    },
    "consistency": {
      "description": "Mantenha consistência visual em todo o aplicativo",
      "guidelines": [
        "Use a mesma paleta de cores em todos os componentes",
        "Mantenha bordas arredondadas consistentes (4px para pequenos, 8px para grandes)",
        "Sombras devem seguir o mesmo padrão (0 2px 8px rgba(0,0,0,0.1))",
        "Espaçamento deve seguir a escala definida"
      ]
    },
    "accessibility": {
      "description": "Design acessível para todos os usuários",
      "guidelines": [
        "Contraste de cores adequado (WCAG AA mínimo)",
        "Tamanhos de fonte legíveis (mínimo 14px para corpo)",
        "Áreas clicáveis com tamanho mínimo de 44x44px",
        "Navegação por teclado funcional",
        "Textos alternativos para imagens"
      ]
    },
    "responsive": {
      "description": "Design adaptável a diferentes tamanhos de tela",
      "guidelines": [
        "Mobile-first approach",
        "Grids devem reduzir colunas em telas menores",
        "Padding e espaçamento devem reduzir proporcionalmente",
        "Navegação deve adaptar-se (menu hambúrguer em mobile)",
        "Imagens devem ser responsivas (max-width: 100%)"
      ]
    }
  },
