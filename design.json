      },
      "categoryGrid": {
        "columns": "6 em desktop, 3 em tablet, 2 em mobile",
        "gap": "1rem"
      }
    },
    "breakpoints": {
      "mobile": "0px - 768px",
      "tablet": "768px - 1024px",
      "desktop": "1024px+"
    }
  },
  "components": {
